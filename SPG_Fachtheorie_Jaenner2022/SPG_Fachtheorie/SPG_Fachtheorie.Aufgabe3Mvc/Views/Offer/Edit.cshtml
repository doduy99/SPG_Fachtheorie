@using SPG_Fachtheorie.Aufgabe2.Dto;
@model OfferDto

<form method="Post">
<table class="table table-sm">
    <thead>
        <tr>
            <th>Term</th>
            <th>Name</th>
            <th>EducationType</th>
            <th>From</th>
            <th>To</th>
            <th>Anzahl</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
       
            <tr>
                <td>@Model.Term</td>
                <td>@Model.Name</td>
                <td>@Model.EducationType</td>
                <td>@Model.From</td>
                <td>
                    <div class="form-group">
                    @*@Html.LabelFor(model => model.To, new { @class = "control-label col-md-2" })*@
                    <div class="col-md-10">
                        @Html.TextBoxFor(model => model.To) @*, new { htmlAttributes = new { @type="date", @class = "form-control datepicker" } })*@
                        @Html.ValidationMessageFor(model => model.To) @*, "", new { @class = "text-danger" })*@
                    </div>
                    </div>
                </td>
                <td>@Model.Anzahl</td>
                <td><div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Save" class="btn btn-primary" />
                        </div>
                    </div>
                 </td>
                @*<td><a href="Offer/Detail/@o.Id">Detail</a> | <a href="Offer/Edit/@o.Id">Edit</a> | <a href="Offer/Delete/@o.Id">Delete</a></td>*@
            </tr>
        
    </tbody>
</table>
</form>

